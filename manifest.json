{
  "name": "Pin Everything",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Right click an image to pin to Pinterest.",
  "page_action": {
    "default_title": "Pinterest Tool"
  },
  "permissions": [ 
    "tabs", 
    "contextMenus", 
    "http://*/*", 
    "https://*/*" 
    ],
  "background": { 
    "scripts": ["pinning.js"] 
  }
}
